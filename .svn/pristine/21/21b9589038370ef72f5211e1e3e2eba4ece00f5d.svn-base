<script>
    Vue.filter('format', function (time, format) {
        if (time == undefined) {
            return '';
        }
        var finalTime;
        if (typeof (time) == 'string') {
            time = time.replace("T", " ");
            time = time.replace("Z", " ");
            var timeIOS = time.replace(/\-/g, "/");
            finalTime = new Date(timeIOS);
        } else {
            finalTime = time;
        }

        var t = new Date(finalTime);
        var tf = function (i) {
            return (i < 10 ? '0' : '') + i
        };
        return format.replace(/yyyy|MM|dd|HH|mm|ss/g,
            function (a) {
                switch (a) {
                    case 'yyyy':
                        return tf(t.getFullYear());
                        break;
                    case 'MM':
                        return tf(t.getMonth() + 1);
                        break;
                    case 'mm':
                        return tf(t.getMinutes());
                        break;
                    case 'dd':
                        return tf(t.getDate());
                        break;
                    case 'HH':
                        return tf(t.getHours());
                        break;
                    case 'ss':
                        return tf(t.getSeconds());
                        break;
                }
            });
    })
    require_js_file(['table', 'form', 'jquery', 'tableExt', 'jqueryui', 'element', 'customUtil', 'laydate'],
        function (fnr) {
            var $ = layui.$;
            var table = layui.table;
            var tableExt = layui.tableExt;
            var laydate = layui.laydate;
            var vm = new Vue({
                el: "#root",
                data: {
                    formList: [],
                    visible: false,
                    searchConditon:
                        {                          
                            Code: '',
                            StartTime: '',
                            EndTime: '',
                            ClientID: 0,
                            PersonID: '',
                            ProjectID: '',
                            DepartmentID: '',
                            DepartmentName: '',
                            ProjectName: ''
                        },
                    CodeSetting: {
                        search: true,
                        fields: { key: 'Code', value: 'Name', root: "Data" },
                        options: [],
                        remote: {
                            url: "/service/finance/Finance/GetFinanceCode", data: { Valid: 1, FinanceCodeType: 0, Company_ID: GetQueryString("ID") }, filter: function (resp) {
                                var Arr = new Array();
                                fnr.each(resp, function (k, v) {

                                    if (v.IsEnd == 1) {
                                        v["Name"] = v["Code"] + " " + v["Name"];
                                        Arr.push(v)
                                    }
                                });
                                return Arr;
                            }
                        }
                    },
                    ClientSetting: {
                        search: true,
                        fields: { key: 'ID', value: 'Name', root: "Data" },
                        options: [],
                        remote: { url: "/service/finance/Finance/GetFinanceClient", data: { Valid: 1, ClientType_ID: 0, Company_ID: 0 } }
                    },
                    PersonSetting: {
                        search: true,
                        fields: { key: 'Account_ID', value: 'Name' },
                        options: [],
                        remote: { url: "/service/Station/GetListStationAccount", root: 'ReturnData.Data' }
                    },
                },
                ready: function () {
                    var self = this;
                    laydate.render({
                        elem: '#StartTime',
                        type: 'datetime',
                        change: function (value, date, endDate) {
                            self.searchConditon.StartTime = value;
                        }
                    });
                    laydate.render({
                        elem: '#EndTime',
                        type: 'datetime',
                        change: function (value, date, endDate) {
                            self.searchConditon.EndTime = value;
                        }
                    });
                },
                methods: {
                    ChoiceProject: function () {
                        var self = this;
                        fnr.openDialog({
                            title: "选择项目",
                            offset: [(document.body.clientHeight - 500) / 2, (document.body.clientWidth - 1000) / 2],
                            content: ["../Set/ProjectSelect.html", "yes"],
                            area: ["500px", "620px"],
                            events: {
                                new: function (data) {
                                    console.log(data);
                                    self.searchConditon.ProjectID = data.ID;
                                    self.searchConditon.ProjectName = data.Name;
                                }
                            }
                        });
                    },
                    ChoiceDepart: function () {
                        var self = this;
                        fnr.openDialog({
                            title: "选择部门",
                            offset: [(document.body.clientHeight - 500) / 2, (document.body.clientWidth - 1000) / 2],
                            content: ["../Set/DepartSelect.html", "yes"],
                            area: ["500px", "620px"],
                            events: {
                                new: function (data) {
                                    self.searchConditon.DepartmentID = data.ID;
                                    self.searchConditon.DepartmentName = data.Name;
                                }
                            }
                        });
                    },
                    //提交
                    Handlesubmit: function () {
                        var self = this;
                        $.get('/service/finance/Finance/GetVoucherContacts', self.searchConditon, function (res) {
                            if (res.SuccessResponse) {
                                self.formList = res.Data;
                                self.visible = true;                               
                            } else {
                                layer.msg(res.Message)
                            }
                        })
                    },
                }
            });
        });
    function GetQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
        var r = window.parent.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]); return null;
    }
</script>