<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>预算列表</title>
</head>
<body id="root">
    <div class="mainContainer">
        <blockquote class="layui-elem-quote">
            <div class="layui-row layui-form">
                <div class="layui-col-xs10">
                    <div class="layui-input-inline">
                        <remote-sel class="" v-bind:setting="YearSetting" laytips="年" v-bind:value.sync="queryFormData.ClueStatus_ID"
                                    initial="off"></remote-sel>
                    </div>
                    <div class="layui-input-inline">
                        <remote-sel v-bind:setting="QuarterSetting" laytips="季度" v-bind:value.sync="queryFormData.Source_ID"
                                    initial="off"></remote-sel>
                    </div>
                    <div class="layui-input-inline">
                        <remote-sel v-bind:setting="DepartmentSetting" laytips="部门" v-bind:value.sync="queryFormData.Source_ID"
                                    initial="off"></remote-sel>
                    </div>
                </div>
            </div>
        </blockquote>      
        <!--操作模板-->
        <table id="listTable" lay-filter="listTable"></table>
    </div>
</body>
</html>
<link href="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/css/layui.css" rel="stylesheet" />
<script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/vue/vue.min.js"></script>
<script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/layui.js"></script>
<script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/require_config.js"></script>
<script>
    require_js_file(['table', 'form', 'jquery', 'tableExt', 'laydate', 'layer'],
        function (fnr) {
            var table = layui.table;
            var form = layui.form;
            var tableExt = layui.tableExt;
            var $ = layui.$;
            var layer = layui.layer;
            var tableColsConfig =
                [
                    //{ fixed: true, checkbox: true },
                    //{ fixed: true, field: 'ID', title: 'ID', width: 80, sort: true },
                    { field: 'DeptName', title: '所属部门', width: 150, sort: true },
                    {
                        field: 'Quarter', title: '年季度', width: 180, sort: true, templet: function () {
                            return this.Year+'年第'+this.Quarter+'季度'
                        }
                    },
                    { field: 'TotalMoney', title: '预算金额', width: 120, sort: true },
                    { field: '', title: '剩余预算', width: 120, sort: true },
                    {
                        field: 'Valid', title: '状态', width: 120, templet: function () {
                            var array = new Array();
                            array.push("<a href='javascript:;'>" + (this.Valid == 0 ? "未审核" : "已审核") + "</a>");
                            return "<div>" + array.join("") + "</div>"; shen
                        }
                    },
                    {
                        fixed: 'right',
                        title: '操作',
                        width: 280,
                        toolbar: function () {
                            var array = new Array();
                            array.push("<button href='javascript:;' class='layui-btn layui-btn-info layui-btn-small' lay-event='SeeDudget'>查看</button>");
                            return "<div>" + array.join("") + "</div>";
                        }
                    }
                ];
            window.rootApp = new Vue({
                el: '#root',
                data: {
                    YearSetting: {
                        search: true,
                        options:
                            [
                                { ID: 1, Description: '2011' },
                                { ID: 2, Description: '2012' },
                                { ID: 3, Description: '2013' },
                                { ID: 4, Description: '2014' },
                            ],
                        fields: { root: 'ReturnData.Data', key: 'ID', value: 'Description' },
                    },
                    QuarterSetting: {
                        search: true,
                        options:
                            [
                                { ID: 1, Description: '第一季度' },
                                { ID: 2, Description: '第二季度' },
                                { ID: 3, Description: '第三季度' },
                                { ID: 4, Description: '第四季度' },
                            ],
                        fields: { root: 'ReturnData.Data', key: 'ID', value: 'Description' },
                    },
                    DepartmentSetting: {
                        search: true,
                        options:
                            [
                                { ID: 1, Description: '研发部一' },
                                { ID: 2, Description: '研发部二' },
                                { ID: 3, Description: '研发部三' },
                            ],
                        fields: { root: 'ReturnData.Data', key: 'ID', value: 'Description' },
                    },
                },

                methods: {
                    SeeDudgetList: function (data) {
                        fnr.openDialog({
                            title: '查看明细',
                            area: ['1320px', '700px'],
                            content: ['BudgetDetailedList.html?Year=' + data.Year + '&Department_ID=' + data.Department_ID + '&Quarter=' + data.Quarter],
                            events: {
                                refresh: function (data) {
                                    if (data.status) {
                                        layer.msg(data.msg);
                                        listTable.refresh()
                                    } else {
                                        layer.msg(data.msg);
                                    }
                                }
                            }
                        });
                    },
                }
            })
            //绑定列表
            var listTable = table.render({
                elem: '#listTable',
                even: true, //开启隔行背景
                page: true, //页分,
                id: 'listTable',
                cols: [tableColsConfig],
                url: "/service/finance/Finance/GetBudgetList"
            });
            tableExt.addEvent("tool(listTable)", {
                "SeeDudget": function (data, obj, e) {
                    rootApp.SeeDudgetList(data);
                },
            })
        })
</script>