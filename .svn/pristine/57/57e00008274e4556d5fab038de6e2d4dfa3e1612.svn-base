                        act_name: 'hx 测试付款222',
                        agentid: '0',
                        device_info: '',
                        check_name: "NO_CHECK",
                        re_user_name: '',
                        ww_msg_type: "NORMAL_MSG",
                        approval_number: '',
                        approval_type: '0',
                        Approval_ID: 2,
                        VoucherID: '111111'
                    };
                    $.post("/service/work/api/WxWorkPay", data, function (result) {
                        if (result.SuccessResponse) {

                        }
                        else {
                            layer.msg(result.Message, { icon: 2 });
                        }
                    })*/

                    //$.get("/service/work/api/WxWorkPayRecord",{trade_no:'148652140220180301172258626'}, function (rsp) {
                    //    if (rsp.SuccessResponse) {
                    //        if (rsp.Data != null) {
                    //        }
                    //    } else {
                    //        layer.msg(rsp.Message)
                    //    }
                    //});
                },
                methods: {
                    saveAdd: function (e) {
                        var _this = this;
                        if (!layui.form.checkInput(e)) {
                            return false;
                        }
                        _this.submitForm.SetOpen = Number(_this.submitForm.SetOpen);
                        $.post("/service/work/api/SetWxWorkPaySet", this.submitForm, function (result) {
                            if (result.SuccessResponse) {
                                layer.msg(result.Message, { icon: 1 });
                            }
                            else {
                                layer.msg(result.Message, { icon: 2 });
                            }
                        })
                        return false;
                    }
                },
            });
        });
</script>