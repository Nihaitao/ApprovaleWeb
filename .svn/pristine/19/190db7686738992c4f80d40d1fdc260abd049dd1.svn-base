                    ApproverCC: [],//抄送人
                    SuperiorCC: 0,//抄送人当前上级级别
                    SuperiorArrCC: [],//抄送人上级级别数组

                    ConditionView: [],//审批条件显示列表
                    ConditionViewTemplete: {//审批条件显示模板
                        FieldId: '',
                        FieldName: "",
                        ConditionOp: "",
                        ContrastValue: "",
                    },

                    //条件审批模板
                    ConditionTemplete: {
                        ConditionType: '',
                        FieldId: '',
                        ConditionOp: '',
                        ContrastValue: '',
                        DeptId: '',
                        AccId: '',
                        Priority: '',
                        ApprovalConditionObject: [],
                        ApprovalConditionCC: [],
                    },
                    //审批人or抄送人模板
                    ApprovalAccountTemplete: {
                        CounterSign: '',
                        Type: '',
                        AccId: '',
                        Priority: '',
                    },
                    //用于存放条件审批数据
                    EdidConditoin: [],
                    //存放条件审批数据模板
                    EdidConditoinTemp: {
                        FieldId: '',
                        EditData1: [],
                        EditData2: [],
                    },
                },
                ready: function () {
                    var self = this;
                    $.get("/service/approval/Approval/GetApprovalInfo", { Approval_ID: 138 }, function (rsp) {//fnr.getQueryString("Approval_ID")
                        if (rsp.SuccessResponse) {
                            //模板内容
                            self.TemplateData.Name = rsp.Data.ApprovalTemplet.Name;
                            self.TemplateData.EditApprover = rsp.Data.ApprovalTemplet.EditApprover;
                            $.each(rsp.Data.ApprovalTemplet.Field, function (i) {
                                self.FieldTemplate.fieldName = this.fieldName;
                                self.FieldTemplate.fieldValue = this.fieldValue;
                                self.FieldTemplate.Required = this.Required;
                                self.FieldTemplate.Option = this.Option;
                                $.each(this.DetailField, function (j) {
                                    self.DetailFieldTemplate.fieldName = this.fieldName;
                                    self.DetailFieldTemplate.fieldValue = this.fieldValue;
                                    self.DetailFieldTemplate.Required = this.Required;
                                    self.DetailFieldTemplate.Option = this.Option;
                                    self.FieldTemplate.DetailField.push(JSON.parse(JSON.stringify(self.DetailFieldTemplate)))
                                })
                                self.TemplateData.Field.push(JSON.parse(JSON.stringify(self.FieldTemplate)))
                            })
                            self.queryFormData.Approval_ID = rsp.Data.ApprovalTypeModel.Approval_ID;
                            //审批流程
                            self.queryFormData.Visrange = rsp.Data.ApprovalTypeModel.Visrange;//可见范围
                            $.each(rsp.Data.ApprovalTypeModel.Condition, function (i) {
                                if (this.Priority == 10000) {//默认审批对象
                                    $.each(this.ApprovalConditionObject, function (j) {
                                        self.Approvers.push(this);
                                        if (this.Type == 0)
                                            self.Superior++;
                                        self.SuperiorArr.push(self.Superior);
                                    })
                                    $.each(this.ApprovalConditionCC, function (j) {
                                        self.ApproverCC.push(this);
                                        if (this.Type == 0)
                                            self.SuperiorCC++;
                                        self.SuperiorArrCC.push(self.SuperiorCC);
                                    })
                                } else {//条件审批
                                    self.queryFormData.Condition.push(this);
                                    var view = self.ConditionViewTemplete;
                                    view.FieldId = this.FieldId;
                                    view.ConditionOp = this.ConditionOp || "为";
                                    view.ContrastValue = this.ContrastValue;
                                    view.FieldName = this.FieldName;
                                    if (this.ConditionType == 1) {//申请人
                                        view.ConditionOp = "为";
                                        view.ContrastValue = this.Names;
                                    }
                                    self.ConditionView.push(JSON.parse(JSON.stringify(view)));//条件审批显示                                    
                                    self.Drag();

                                    //条件审批编辑数据
                                    self.EdidConditoinTemp.FieldId = this.FieldId;
                                    var data = {
                                        ConditionOp: "",
                                        ContrastValue: "",
                                        Departs: this.ApprovalConditionCC,
                                        Approvers: this.ApprovalConditionObject,
                                        ApproverCC: [],
                                        FieldId: this.FieldId,
                                        FieldName: this.FieldName
                                    }
                                    var data2 = {
                                        Superior: 0,
                                        SuperiorArr: [],
                                        SuperiorCC: 0,
                                        SuperiorArrCC: [],
                                    }
                                    if (this.ConditionType == 1) {//申请人
                                        var departCount = 0;
                                        var nameArr = this.Names.split(",");
                                        if (this.DeptId != null && this.DeptId != "") {
                                            var deArr = this.DeptId.split(",");
                                            departCount = deArr.length;
                                            $.each(deArr, function (j) {
                                                data.Departs.push({ "DepartmentID": deArr[j], "Name": nameArr[j], "IsAccount": 0 })
                                            })
                                        }
                                        if (this.AccId != null && this.Accid != "") {
                                            var deArr = this.AccId.split(",");
                                            $.each(deArr, function (j) {
                                                data.Departs.push({ "DepartmentID": deArr[j + departCount], "Name": nameArr[j + departCount], "IsAccount": 1 })
                                            })
                                        }
                                    } else {
                                        data.ConditionOp = this.ConditionOp;
                                        data.ContrastValue = this.ContrastValue.split(",");
                                    }
                                    self.EdidConditoinTemp.EditData1 = data;
                                    if (this.ApprovalConditionObject != null) {
                                        $.each(this.ApprovalConditionObject, function (j) {
                                            if (this.Type == 0)
                                                data2.Superior++;
                                            data2.SuperiorArr.push(data2.Superior);
                                        })
                                    }
                                    if (this.ApprovalConditionCC != null) {
                                        $.each(this.ApprovalConditionCC, function (j) {
                                            if (this.Type == 0)
                                                data2.SuperiorCC++;
                                            data2.SuperiorArrCC.push(data2.SuperiorCC);
                                        })
                                    }
                                    self.EdidConditoinTemp.EditData2 = data2;
                                    var exist = false;
                                    for (var i in self.EdidConditoin) {
                                        if (self.EdidConditoin[i].FieldId == this.FieldId) {
                                            self.EdidConditoin[i] = JSON.parse(JSON.stringify(self.EdidConditoinTemp));
                                            exist = true;
                                        }
                                    }
                                    if (!exist)
                                        self.EdidConditoin.push(JSON.parse(JSON.stringify(self.EdidConditoinTemp)));
                                }
                            })
                            console.log(self.EdidConditoin);


                        }
                    })
                },
                methods: {
                    //添加字段
                    AddField: function () {
                        this.FieldTemplate.fieldName = "";
                        this.FieldTemplate.fieldValue = "-1";
                        this.FieldTemplate.Required = [];
                        this.FieldTemplate.Option = [{ value: "" }, { value: "" }];
                        this.FieldTemplate.DetailField = [{//明细字段
                            fieldName: '',//字段名称
                            fieldType: {//字段类型
                                options: [
                                     { key: '100', value: '单行文本' }, { key: '102', value: '多行文本' }, { key: '103', value: '单选框' }, { key: '110', value: '多选框' }, { key: '104', value: '数值' }, { key: '106', value: '金额' }, { key: '108', value: '时间' }, { key: '111', value: '附件' }
                                ]
                            },
                            fieldValue: '0',
                            Required: [],//是否必填
                            Option: [{ value: "" }, { value: "" }],//明细选项
                        }]
                        this.TemplateData.Field.push(JSON.parse(JSON.stringify(this.FieldTemplate)))
                    },
                    //添加选项
                    AddOption: function (obj) {
                        obj.Option.push({ value: "" });
                    },
                    //添加明细字段
                    AddDetailField: function (obj) {
                        this.DetailFieldTemplate.fieldName = "";
                        this.DetailFieldTemplate.fieldValue = "-1";
                        this.DetailFieldTemplate.Required = [];
                        this.DetailFieldTemplate.Option = [{ value: "" }, { value: "" }];
                        obj.DetailField.push(JSON.parse(JSON.stringify(this.DetailFieldTemplate)))
                    },
                    //添加明细选项
                    AddDetailOption: function (obj) {
                        obj.Option.push({ value: "" });
                    },
                    //删除
                    DeleteObj: function (obj, index) {
                        obj.splice(index, 1);
                    },
                    //添加审批人
                    addApprover: function () {
                        fnr.openDialog({
                            title: '选择审批人',
                            area: ['500px', '520px'],
                            content: ['/Html/Auditing/ChooseApproval.html'],
                            btn: ['确定'],
                            events: {
                                refresh: function (data) {
                                    rootApp.Approvers.push(data);
                                    if (data.Type == 0)//如果是上级，上级标识+1
                                        rootApp.Superior++;
                                    rootApp.SuperiorArr.push(rootApp.Superior);//上级标识数组添加标识数据
                                }
                            }
                        });
                    },
                    //删除审批人
                    deleteApprover: function (obj, index) {
                        if (obj[index].Type == 0) {//如果删除的是上级，上级标识-1，该索引后面的标识数组全部减1
                            rootApp.Superior--;
                            for (var i = index; i < rootApp.SuperiorArr.length; i++) {
                                rootApp.SuperiorArr[i] = rootApp.SuperiorArr[i] - 1;
                            }
                        }
                        obj.splice(index, 1);
                        rootApp.SuperiorArr.splice(index, 1);//删除标识数组指定元素
                    },
                    //添加抄送人
                    addApproverCC: function () {
                        fnr.openDialog({
                            title: '选择抄送人',
                            area: ['500px', '520px'],
                            content: ['/Html/Auditing/ChooseApproval.html?CC=true'],
                            btn: ['确定'],
                            events: {
                                refresh: function (data) {
                                    rootApp.ApproverCC.push(data);
                                    if (data.Type == 0)
                                        rootApp.SuperiorCC++;
                                    rootApp.SuperiorArrCC.push(rootApp.SuperiorCC);//上级标识数组添加标识数据
                                }
                            }
                        });
                    },
                    //删除抄送人
                    deleteApproverCC: function (obj, index) {
                        if (obj[index].Type == 0) {//如果删除的是上级，上级标识-1，该索引后面的标识数组全部减1
                            rootApp.SuperiorCC--;
                            for (var i = index; i < rootApp.SuperiorArrCC.length; i++) {
                                rootApp.SuperiorArrCC[i] = rootApp.SuperiorArrCC[i] - 1;
                            }
                        }
                        obj.splice(index, 1);
                        rootApp.SuperiorArrCC.splice(index, 1);//删除标识数组指定元素
                    },
                    //添加条件审批
                    AddCondition: function (FieldId) {
                        fnr.openDialog({
                            title: '添加条件审批',
                            area: ['800px', '600px'],
                            content: ['/Html/Auditing/AddCondition.html?Approval_ID=' + this.queryFormData.Approval_ID + "&FieldId=" + FieldId],
                            events: {
                                refresh: function (rspData) {
                                    var data = rspData.data;
                                    var data2 = rspData.data2;
                                    //存储条件审批编辑数据
                                    rootApp.EdidConditoinTemp.FieldId = data.FieldId;
                                    rootApp.EdidConditoinTemp.EditData1 = data;
                                    rootApp.EdidConditoinTemp.EditData2 = data2;
                                    var exist = false;
                                    for (var i in rootApp.EdidConditoin) {
                                        if (rootApp.EdidConditoin[i].FieldId == data.FieldId) {
                                            rootApp.EdidConditoin[i] = JSON.parse(JSON.stringify(rootApp.EdidConditoinTemp));
                                            exist = true;
                                        }
                                    }
                                    if (!exist)
                                        rootApp.EdidConditoin.push(JSON.parse(JSON.stringify(rootApp.EdidConditoinTemp)));

                                    //条件审批显示模板
                                    var view = rootApp.ConditionViewTemplete;
                                    view.FieldId = data.FieldId;
                                    view.FieldName = data.FieldName;
                                    view.ConditionOp = data.ConditionOp || "为";
                                    view.ContrastValue = data.ContrastValue;
                                    if (data.FieldId == 0) {//申请人
                                        var depart = "", account = "";
                                        for (var index in data.Departs) {
                                            if (data.Departs[index].IsAccount == 0)
                                                depart += data.Departs[index].Name + ",";
                                            else
                                                account += data.Departs[index].Name + ",";
                                        }
                                        view.ContrastValue = depart + account;
                                        if (view.ContrastValue.length > 0)
                                            view.ContrastValue = view.ContrastValue.substr(0, view.ContrastValue.length - 1);
                                    }
                                    exist = false;
                                    for (var i in rootApp.ConditionView) {
                                        if (rootApp.ConditionView[i].FieldId == data.FieldId) {
                                            rootApp.ConditionView.splice(i, 1, JSON.parse(JSON.stringify(view)));
                                            exist = true;
                                        }
                                    }
                                    if (!exist)
                                        rootApp.ConditionView.push(JSON.parse(JSON.stringify(view)));//条件审批显示
                                    //条件审批列表
                                    rootApp.EditConditionInfo(data);
                                    //拖拽
                                    rootApp.Drag();
                                }
                            }
                        });
                    },
                    //编辑条件审批列表
                    EditConditionInfo: function (data) {
                        //条件审批模板
                        var condition = rootApp.ConditionTemplete;
                        condition.ApprovalConditionObject = [];
                        condition.ApprovalConditionCC = [];
                        //审核人列表
                        for (var i = 0; i < data.Approvers.length; i++) {
                            var account = rootApp.ApprovalAccountTemplete;
                            account.Type = data.Approvers[i].Type;
                            account.CounterSign = data.Approvers[i].CounterSign;
                            account.AccId = data.Approvers[i].AccId;
                            account.Priority = i;
                            condition.ApprovalConditionObject.push(JSON.parse(JSON.stringify(account)));
                        }
                        //抄送人列表
                        for (var i = 0; i < data.ApproverCC.length; i++) {
                            var accountCC = rootApp.ApprovalAccountTemplete;
                            accountCC.Type = data.ApproverCC[i].Type;
                            accountCC.AccId = data.ApproverCC[i].AccId;
                            accountCC.Priority = i;
                            condition.ApprovalConditionCC.push(JSON.parse(JSON.stringify(accountCC)));
                        }
                        condition.FieldId = data.FieldId;
                        if (data.FieldId == 0) {//申请人
                            condition.ConditionType = 1;
                            condition.ConditionOp = "";
                            condition.ContrastValue = "";
                            for (var i = 0; i < data.Departs.length; i++) {
                                if (data.Departs[i].IsAccount == 0) {//部门
                                    condition.DeptId += data.Departs[i].DepartmentID + ",";
                                } else {
                                    condition.AccId += data.Departs[i].DepartmentID + ",";
                                }
                            }
                            if (condition.DeptId.length > 0)
                                condition.DeptId = condition.DeptId.substr(0, condition.DeptId.length - 1);
                            if (condition.AccId.length > 0)
                                condition.AccId = condition.AccId.substr(0, condition.AccId.length - 1);
                        } else {//自定义字段
                            condition.ConditionType = 2;
                            condition.ConditionOp = data.ConditionOp;
                            condition.ContrastValue = typeof data.ContrastValue == "object" ? data.ContrastValue.join(",") : data.ContrastValue;
                            condition.DeptId = "";
                            condition.AccId = "";
                        }
                        var exist = false;
                        for (var i in rootApp.queryFormData.Condition) {
                            if (rootApp.queryFormData.Condition[i].FieldId == data.FieldId) {
                                rootApp.queryFormData.Condition[i] = JSON.parse(JSON.stringify(condition));
                                exist = true;
                            }
                        }
                        if (!exist)
                            rootApp.queryFormData.Condition.push(JSON.parse(JSON.stringify(condition)));//条件审批
                    },
                    //选择可见范围
                    SelectPage: function () {
                        var self = this;
                        var Json = "";
                        $.each(self.queryFormData.Visrange, function () {
                            Json += this.DepartmentID + "|" + this.Name + "|" + this.IsAccount + ",";
                        });
                        Json = Json.substring(0, Json.length - 1);
                        fnr.openDialog({
                            title: '选择用户或部门',
                            area: ['500px', '600px'],
                            content: ['DepartmentSelect.html?json=' + Json],
                            btn: ['确认'],
                            events: {
                                refresh: function (data) {
                                    var jsondata = [];
                                    $.each(self.queryFormData.Visrange, function (i, x) {
                                        var flg = false;
                                        $.each(data, function (ii, xx) {
                                            if (x.DepartmentID == xx.ID)
                                                flg = true;
                                        });
                                        if (flg)
                                            jsondata.push(x);
                                    })
                                    self.queryFormData.Visrange = jsondata;
                                    $.each(data, function (i, x) {
                                        var flg = false;
                                        $.each(self.queryFormData.Visrange, function (ii, xx) {
                                            if (xx.DepartmentID == x.ID) {
                                                flg = true;
                                            }
                                        })
                                        if (!flg) {
                                            self.queryFormData.Visrange.push({ "DepartmentID": x.ID, "Name": x.Name, "IsAccount": x.IsAccount });
                                            self.operateName = "修改";
                                        }
                                    })
                                }
                            }
                        });
                    },
                    //删除条件审批
                    delView: function (obj, index) {
                        //删除需要提交的数据
                        for (var item in this.queryFormData.Condition) {
                            if (obj[index].FieldId == this.queryFormData.Condition[item].FieldId) {
                                this.queryFormData.Condition.splice(item, 1);
                            }
                        }
                        //删除编辑数据
                        for (var item in this.EdidConditoin) {
                            if (obj[index].FieldId == this.EdidConditoin[item].FieldId) {
                                this.EdidConditoin.splice(item, 1);
                            }
                        }
                        //删除显示数据
                        obj.splice(index, 1);
                    },
                    //拖拽
                    Drag: function () {
                        console.log(1)
                        return $(".tree").sortable({
                            stop: function (event, ui) {
                            }
                        });
                    },
                    Next: function (e) {
                        if (!layui.form.checkInput(e)) {
                            return false;
                        }
                        $.post("/service/approval/Approval/AddApprovalTemplet", this.queryFormData, function (rsp) {
                            if (rsp.Data > 0) {
                                location.href = "../Auditing/UserEdit.html?Approval_ID=" + rsp.Data;
                            } else {
                                layer.msg("操作失败,请重试");
